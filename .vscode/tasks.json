{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++17",
                "${workspaceFolder}/*.cpp",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}",
                "-I", "/root/projects/vcpkg/installed/x64-linux/include", // Path to SQLiteCpp headers
                "-L", "/root/projects/vcpkg/installed/x64-linux/lib", // Path to SQLiteCpp library
                "-lSQLiteCpp", "-lsqlite3", // Link SQLiteCpp and SQLite libraries
                "-lboost_system",
                "-lpthread",
                "-ldl" 
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}